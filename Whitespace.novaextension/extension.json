{
    "identifier": "Mecham.Whitespace",
    "name": "Whitespace",
    "vendor": "Mecham",
    "description": "Provides support for trimming trailing whitespace from documents.",
    "version": "1.3.1",
    "categories": ["formatters"],
    "repository": "https://github.com/jsmecham/nova-whitespace",
    "bugs": "https://github.com/jsmecham/nova-whitespace/issues",
    "license": "MIT",
    "main": "main.dist.js",
    "entitlements": {
        "filesystem": "readonly",
        "process": true
    },
    "commands": {
        "editor": [
            {
                "title": "Trim Trailing Whitespace",
                "command": "whitespace.trim"
            }
        ]
    },
    "config": [
        {
            "key": "Mecham.Whitespace.trimOnSave",
            "title": "Trim on Save",
            "description": "Automatically trim trailing whitespace when the active editor saves.",
            "type": "boolean",
            "default": true
        }
    ]
}
